{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  },
  "paths": {
    "@app": ["./frontend/src/app"],
    "@assets": ["./frontend/src/assets"],
    "@studio": ["./project12-backend"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["frontend/node_modules", "project12-backend/node_modules"]
}
